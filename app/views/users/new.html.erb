<div class="max-w-xl mx-auto mt-10 p-8 bg-base-200 rounded-xl shadow-md">
  <h1 class="text-2xl font-bold mb-6 text-center text-primary">Cadastro de Usu√°rio</h1>

  <%= form_with model: @user, local: true do |f| %>
    <div class="form-control mb-4">
      <%= f.label :nome, class: "label" %>
      <%= f.text_field :nome, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control mb-4">
      <%= f.label :curso, class: "label" %>
      <%= f.text_field :curso, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control mb-4">
      <%= f.label :matricula, class: "label" %>
      <%= f.text_field :matricula, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control mb-4">
      <%= f.label :usuario, class: "label" %>
      <%= f.text_field :usuario, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control mb-4">
      <%= f.label :formacao, class: "label" %>
      <%= f.text_field :formacao, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control mb-4">
      <%= f.label :ocupacao, class: "label" %>
      <%= f.select :ocupacao, ["docente", "dicente", "admin"], {}, class: "select select-bordered w-full" %>
    </div>

    <div class="form-control mb-4">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control mb-6">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, class: "input input-bordered w-full" %>
    </div>

    <div class="text-center">
      <%= f.submit "Cadastrar", class: "btn btn-primary w-full" %>
    </div>
  <% end %>
</div>
