<div class="p-6">
  <h1 class="text-2xl font-bold mb-4">Editar Template</h1>

  <%= render "form", template: @template %>

  <div class="mt-4">
    <%= link_to "Voltar", templates_path, class: "btn btn-outline" %>
  </div>
</div>

<%= tag.script type: "application/json", id: "form-json-data" do %>
  <%= @template.formulario.to_json.html_safe %>
<% end %>



