<h1 class="text-2xl font-bold mb-4">Criar novo Template</h1>

<%= form_with model: @template, class: "space-y-4", local: true do |f| %>
  <div>
    <%= f.label :nome, "Nome do Template", class: "block font-semibold" %>
    <%= f.text_field :nome, class: "input input-bordered w-full" %>
  </div>

  <div data-controller="formbuilder">
    <div class="flex justify-between items-center mb-2">
      <label class="block font-semibold">Perguntas do Formul√°rio</label>
      <button type="button" class="btn btn-sm btn-accent" data-action="click->formbuilder#addQuestion">+ Adicionar pergunta</button>
    </div>

    <div data-formbuilder-target="questions" class="space-y-2"></div>

    <%= f.hidden_field :formulario, data: { formbuilder_target: "formulario" } %>
  </div>

  <div class="mt-4">
    <%= f.submit "Salvar Template", class: "btn btn-primary" %>
    <%= link_to "Cancelar", formularios_path, class: "btn btn-ghost ml-2" %>
  </div>
<% end %>
