<div class="max-w-md mx-auto mt-10 bg-base-200 p-8 rounded-xl shadow">
  <h2 class="text-2xl font-bold text-center mb-6 text-primary">Entrar no sistema</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-control mb-4">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
    </div>

    <div class="form-control mb-6">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-control mb-6">
        <label class="cursor-pointer label">
          <%= f.check_box :remember_me, class: "checkbox" %>
          <span class="label-text ml-2">Lembrar login</span>
        </label>
      </div>
    <% end %>

    <div class="text-center">
      <%= f.submit "Entrar", class: "btn btn-primary w-full" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= link_to "Esqueci minha senha", new_password_path(resource_name), class: "link link-info" %>
  </div>
</div>
