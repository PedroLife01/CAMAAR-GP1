<div class="max-w-xl mx-auto mt-10 p-8 bg-base-200 rounded-xl shadow-md">
  <h1 class="text-2xl font-bold mb-6 text-center text-primary">Redefinir Senha</h1>

  <% if resource.errors.any? %>
    <div class="mb-6 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <strong class="font-bold">Erro(s):</strong>
      <ul class="list-disc list-inside mt-2">
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-control mb-4">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full" %>
    </div>

    <div class="form-control mb-6">
      <%= f.label :password_confirmation, class: "label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
    </div>

    <div class="text-center">
      <%= f.submit "Salvar nova senha", class: "btn btn-primary w-full" %>
    </div>
  <% end %>
</div>
