<div class="max-w-xl mx-auto mt-10 p-8 bg-base-200 rounded-xl shadow-md">
  <h1 class="text-2xl font-bold mb-6 text-center text-primary">Esqueci minha senha</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="form-control mb-6">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
    </div>

    <div class="text-center">
      <%= f.submit "Enviar instruções", class: "btn btn-primary w-full" %>
    </div>
  <% end %>
</div>
